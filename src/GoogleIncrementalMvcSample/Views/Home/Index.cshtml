@model GoogleIncrementalMvcSample.Models.IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<h3>Google API .NET Client - Incremental Auth Sample</h3>

<table class="table">
    <thead>
        <tr>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <a href='@Url.Action("SignOut")'>Sign Out</a>
                </td>
                <td>
                    <span>Signed in as @Model.UserName (@Model.UserEmail)</span>
                </td>
            }
            else
            {
                <td>
                    <a href='@Url.Action("SignIn")'>Sign In</a>
                </td>
                <td>
                    <span>Signed out</span>
                </td>
            }
        </tr>
    <tr>
        <td>
            <a href='@Url.Action("ListCourses")'>Get a list of Google Classroom classes</a>
        </td>
        <td>
            @if (Model.Courses != null)
            {
                <p>@Model.UserName's classes</p>
                <ol>
                    @foreach (var course in Model.Courses)
                    {
                        <li>@course.CourseName</li>
                    }
                </ol>
            }
        </td>
    </tr>
    @if (Model.Scopes != null)
    {
        <tr>
            <td></td>
            <td>
                <p>Scopes</p>
                <ul>
                    @foreach (var scope in Model.Scopes)
                    {
                        <li>@scope</li>
                    }
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>